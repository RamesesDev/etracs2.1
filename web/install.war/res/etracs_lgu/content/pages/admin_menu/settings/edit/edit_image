<script>

	\$put( 
		"sysvar_edit", 
		new function() 
		{
			this.saveHandler;	
			this.info;
			this.file;
			
			this.save = function() {
				this.saveHandler(this.info);
				return "_close";
			}
			
			this.upload_complete = function() {
				this.info = this.file;
				this.file = null;
				this._controller.refresh();
			}
		}
	);
	
</script>

<br/>
<div r:type="label" r:context="sysvar_edit">
	<img src="#{info.value}?v=#{Math.random()}" height="150"/>
	<br/>
	<div class="hr"></div>
	<input type="file"
		r:name="file"
		r:context="sysvar_edit" 
		r:caption="Change Logo"
		r:oncomplete="upload_complete"
		r:params="{name: '#{info.name}'}"
		r:url="/actions/lgu-logo-upload"/>
</div>

